<% @message.each do |message| %>
<div class="row">
  <div class="col s12 m6 offset-m3 ">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <form class="new_message" id="new_message" action="/messages" accept-charset="UTF-8" method="post">
          <label for="message_content"></label>
          <%= message.text %>
      </div>
      <% if user_signed_in? && current_user.id == message.user_id %>
      <div class="card-action">
        <a href="#">Show</a>
        <%= link_to "Edit","/messages/#{message.id}/edit", method: :get %>
        <%= link_to "Destroy","/messages/#{message.id}", method: :delete %>
      <% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>